{
  "name": "react-counter-app",
  "version": "1.0.0",
  "description": "シンプルなReactカウンターアプリケーション",
  "main": "index.js",
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('pnpm') === -1) throw new Error('pnpmを使用してください')\"",
    "clean": "rm -rf node_modules .npm-packages .npm-cache dist",
    "clean:all": "npm run clean && rm -rf package-lock.json",
    "start": "npx serve -s dist",
    "build": "npx webpack --mode production",
    "dev": "npx webpack serve --mode development",
    "postinstall": "npm run clean",
    "test": "echo \"テストはまだ実装されていません\" && exit 0"
  },
  "config": {
    "prefix": ".npm-packages",
    "cache": ".npm-cache",
    "loglevel": "error",
    "package-lock": true,
    "audit": true,
    "fund": false,
    "save-exact": true,
    "save-prefix": "",
    "save-dev": true,
    "cache-min": 3600,
    "cache-max": "infinity",
    "progress": false,
    "update-notifier": false,
    "verify-store-integrity": true
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
